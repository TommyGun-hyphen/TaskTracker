<div class="container w-50 bg-white py-5">
    <h3>Friends:</h3>
    <% for(friend of friends) { %>
        <a href="/user/<%= friend.id %>" class="text-reset text-decoration-none">
            <div class="row p-3 align-items-center">
                <div class="col-4">
                    <img src="/<%= friend.picture %>" width="75" height="75" style="object-fit:cover" class="rounded-circle border"/>
                </div>
                <div class="col-6">
                    <h4><%= friend.username%></h4>
                    <h6><%= friend.email%></h6>
                </div>
                <div class="col-2">
                    <% if (friend.isFriend) { %>
                     <h6 class="text-success">friend</h6>
                    <% } %>
                </div>
            </div>
        </a>
    <% } %>
</div>