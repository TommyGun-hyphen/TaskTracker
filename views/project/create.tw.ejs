<div class="flex flex-wrap justify-content-center mt-4">
  <div class="relative flex flex-col min-w-0 rounded break-words border bg-white border-1 border-grey-light w-1/2">
      <div class="flex-auto p-6">
          <h4 class="mb-3">create new Project</h4>
          <%- include('../partials/errors') %>
          <form action="/project" method="post">
              <div class="mb-4">
                <label for="title">Project title</label>
                <input type="text"
                  class="block appearance-none w-full py-1 px-2 mb-1 text-base leading-normal bg-white text-grey-darker border border-grey rounded" name="title" id="title" aria-describedby="helpTitle" placeholder="title...">
                <small id="helpTitle" class="block mt-1 text-grey">enter a meaningful title for your project</small>
              </div>
              <div class="mb-4">
                <label for="description">description</label>
                <textarea class="block appearance-none w-full py-1 px-2 mb-1 text-base leading-normal bg-white text-grey-darker border border-grey rounded" name="description" id="description" flex flex-wraps="3" aria-describedby="helpDescription"></textarea>
                <small id="helpDescription" class="block mt-1 text-grey">enter a concise description for your project</small>
              </div>
              <button type="submit" class="inline-block align-middle text-center select-none border font-normal whitespace-no-wrap py-2 px-4 rounded text-base leading-normal no-underline text-blue-lightest bg-blue hover:bg-blue-light mt-3">Create Project</button>
          </form>
      </div>
  </div>
</div>
