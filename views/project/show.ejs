<div class="header-bar d-flex align-items-center justify-content-between">
    <h4 class="text-light d-inline"><%= project.title %></h4>

    <button type="button" class="btn btn-info" data-toggle="modal" data-target="#inviteUsers">
        + Invite
    </button>

    <div class="modal fade" id="inviteUsers" tabindex="-1" role="dialog" aria-labelledby="inviteUsersModal" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="inviteUsersModal">Invite Users</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <h6>Friends</h6>
              <div class="input-group mt-3">
                <input type="text" name="q" class="form-control bg-light border-0 small" placeholder="Search for user..."
                    aria-label="Search" aria-describedby="basic-addon2">
                <div class="input-group-append">
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-search fa-sm"></i>
                    </button>
                </div>
            </div>
              <div id="inviteFriendsList">
                <div>
                    <a href="/user/" class="text-reset text-decoration-none">
                        <div class="row p-3 align-items-center">
                            <div class="col-2">
                                <img src="https://source.unsplash.com/random/50x50" width="50" height="50" style="object-fit:cover" class="rounded-circle border"/>
                            </div>
                            <div class="col-6">
                                <h5>ysername</h5>
                                <h6>emakf@of.com</h6>
                            </div>
                            <div class="col-4">
                                <button class="btn btn-primary float-right">invite</button>
                            </div>
                        </div>
                    </a>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>

</div>